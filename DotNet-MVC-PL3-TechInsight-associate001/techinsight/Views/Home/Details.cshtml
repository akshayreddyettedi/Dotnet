@model techinsight.Models.Article
@{
    ViewBag.Title = "Article Details";
}

<main>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title" id="articleTitle">@Model.Title</h1>
                    <p class="card-text"><small class="text-muted">By <span id="articleAuthor">@Model.Author</span></small></p>
                    <hr />
                    <div class="card-text" id="articleContent">
                        @Model.Content
                    </div>
                    <hr />
                    <div class="mt-3">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-secondary", id = "homeBtn" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>